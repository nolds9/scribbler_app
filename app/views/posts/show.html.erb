<div class="entry">
  <div class="entry-header">
    <span><%= @post.title %></span>
    <span><span class="entry-posted-by">Posted by&nbsp;</span><%= @post.user.username %></span>
    <span><%= time_ago_in_words(@post.created_at) %></span>
  </div>
  <img class="entry-photo" src="<%= @post.image %>">
  <div class="entry-edit-delete">
    <a href="/posts/<%= @post.id %>/edit">Edit</a>
    <form action="/posts/<%= @post.id %>" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit">Delete</button>
    </form>
  </div>
</div>
<div class="entry">
  <h2>Comments:</h2>
  <% @comments.each do |comment| %>
    <p> Author: <%= comment.author %> </p>
    <p> Title: <%= comment.title %> </p>
    <p> Comment:<%= comment.body %> </p>
    <%= link_to "delete", [comment.post, comment ], method: :delete %>
  <% end %>

  <h4>New Comment</h4>
  <%= form_for ([@post,@post.comments.build]) do |f| %>
    <p>
      <%= f.label :author  %><br>
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :title  %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
  <p> <%= f.submit %> </p>
  <% end %>
</div>
