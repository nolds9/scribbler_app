<div class="post">
  <div class="post-header">
    <span><%= @post.title %></span>
    <span><span class="entry-posted-by">Posted by&nbsp;</span><%= @post.user.username %></span>
    <span><%= time_ago_in_words(@post.created_at)%> ago</span>
  </div>
  <%= image_tag @post.image, class: "post-photo" %>
  <div class="post-edit-delete">
    <p><%= @post.body %></p>
    <%= link_to "Edit", edit_post_path(@post) %>
  </div>
</div>
<div class="post">
  <h2>Comments:</h2>
  <% @comments.each do |comment| %>
    <p> Author: <%= comment.author %> </p>
    <p> Title: <%= comment.title %> </p>
    <p> Comment:<%= comment.body %> </p>
    <%= link_to "delete", [comment.post, comment ], method: :delete %>
  <% end %>

  <h4>New Comment</h4>
  <%= form_for ([@post,@post.comments.build]) do |f| %>
    <p>
      <%= f.label :author  %><br>
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :title  %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
  <p> <%= f.submit %> </p>
  <% end %>
</div>
