<div class="post">
  <div class="post-header">
    <span><%= @post.title %></span>
    <span><span class="entry-posted-by">Posted by&nbsp;</span><%= @post.user.username %></span>
    <span><%= time_ago_in_words(@post.created_at)%> ago</span>
  </div>
  <%= image_tag @post.image, class: "post-photo" %>
  <div class="post-edit-delete">
    <p><%= @post.body %></p>
    <%= link_to "Edit", edit_post_path(@post) %>
  </div>
</div>
<div class="post">
  <div class="commentbox">
    <h2>Comments:</h2>
    <ul>
    <% @comments.each do |comment| %>
      <p><%= comment.author %> says: <%= comment.body %></p>
      <% if user_signed_in? %>
        <%= link_to "delete", [comment.post, comment ], method: :delete %>
      <% end %>
    <% end %>
    </ul>
    <h4>New Comment</h4>
    <%= form_for ([@post,@post.comments.build]) do |f| %>
      <p>
        <%= f.label :author  %><br>
        <%= f.text_field :author %>
      </p>
      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </p>
    <p> <%= f.submit %> </p>
    <% end %>
  </div>

</div>
