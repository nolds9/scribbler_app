<div class="new-post">
  <%= form_for @post do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :image %>
      <%= f.text_field :image %>
    </p>

    <p>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </p>

    <%= f.submit %>
  <% end %>
</div>
